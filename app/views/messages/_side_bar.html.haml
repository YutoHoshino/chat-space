.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons--new
          = link_to new_group_path do
            =icon('fas', 'edit')
        %li.top-items__icons--set
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .side-bar__grouplist
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        %p.side-bar__grouplist--name 
          = group.name
        %p.side-bar__grouplist--message 
          = group.show_last_message